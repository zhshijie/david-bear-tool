{
	"name": "DavidBear",
	"displayName": "DavidBear",
	"description": "DavidBear",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onCommand:extension.davidBearCreateContainer",
    "onCommand:extension.davidBearCreateSection",
    "onCommand:extension.davidBearCreateFunctionComponent",
    "onCommand:extension.davidBearCreateClassComponent"
	],
	"main": "./out/extension.js",
	"contributes": {
    "configuration": {
      "properties": {
        "davidBear.scssImageRootPath": {
          "type": "string",
          "default": "modules/client/spa-modules",
          "description": "scss 中图片的根目录地址"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "extension.davidBearCreateContainer"
        },
        {
          "command": "extension.davidBearCreateSection"
        },
        {
          "command": "extension.davidBearCreateFunctionComponent"
        },
        {
          "command": "extension.davidBearCreateClassComponent"
        }
      ],
      "explorer/context": [
        {
					"command": "extension.davidBearCreateContainer",
					"group": "navigation@0"
        },
        {
					"command": "extension.davidBearCreateSection",
					"group": "navigation@1"
        },
        {
					"command": "extension.davidBearCreateFunctionComponent",
					"group": "navigation@2"
        },
        {
					"command": "extension.davidBearCreateClassComponent",
					"group": "navigation@3"
				}
      ]
     
    },
		"commands": [
			{
				"command": "extension.davidBearCreateContainer",
				"title": "[大卫熊指令]创建 Container"
      },
      {
				"command": "extension.davidBearCreateSection",
				"title": "[大卫熊指令]创建 Section"
      },
      {
				"command": "extension.davidBearCreateFunctionComponent",
				"title": "[大卫熊指令]创建 Function Component"
      },
      {
				"command": "extension.davidBearCreateClassComponent",
				"title": "[大卫熊指令]创建 Class Component"
      }
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
